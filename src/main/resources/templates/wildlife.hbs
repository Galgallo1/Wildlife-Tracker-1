{{#partial "content"}}
    <div class="track">
        <h1 class="text-center">LETS START TRACKING</h1>
        <div class="tracker-form">
            <div class="card p-4">
                <h2 class="text-center">TRACK AN ANIMAL</h2>
                <form>
                    <div class="form-group">
                        <label for="animalId">Animal id</label>
                        <input type="number" class="form-control" id="animalId" aria-describedby="emailHelp" placeholder="Enter animal id">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input type="text" class="form-control" id="location" aria-describedby="emailHelp" placeholder="Enter location">
                    </div>
                    <div class="form-group">
                        <label for="ranger">Ranger's name</label>
                        <input type="email" class="form-control" id="ranger" aria-describedby="emailHelp" placeholder="Enter ranger's name">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{>layout.hbs}}